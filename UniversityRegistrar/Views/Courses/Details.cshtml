@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course;

<h2>Course Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.CourseName): @Html.DisplayFor(model => model.CourseName)</h3>

@if(@Model.Students.Count == 0)
{
  <p>This courses does not contain any students</p>
}
else
{
  <h4>Students the course contain:</h4>
  <ul>
  @foreach(var join in Model.Students)
  {
    <li>@join.Student.StudentName</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to Courses", "Index")</p>
<p>@Html.ActionLink("Edit Courses", "Edit", new { id = Model.CourseId })</p>
<p>@Html.ActionLink("Delete Courses", "Delete", new { id = Model.CourseId })</p>